generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("USER")

  // UNIX: Preferencias de usuario
  skinTone            String? // warm, cool, neutral
  styleType           String? // casual, formal, sporty, elegant, bohemian
  onboardingCompleted Boolean @default(false)

  // Relaciones existentes
  accounts       Account[]
  sessions       Session[]
  orders         Order[]
  reviews        Review[]
  returnRequests ReturnRequest[]

  // UNIX: Nuevas relaciones
  closetItems        ClosetItem[]
  outfits            Outfit[]
  colorimetryResults ColorimetryResult[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id          String @id @default(cuid())
  name        String
  description String
  price       Float
  images      String[]
  category    String
  sizes       String[]
  colors      String[] // Array de colores: ["red", "blue", "black"]

  // UNIX: Enriquecimiento de productos
  styleTypes String[] // Array de estilos: ["casual", "formal", "sporty"]

  stock     Int      @default(0)
  featured  Boolean  @default(false)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones
  orderItems  OrderItem[]
  reviews     Review[]
  closetItems ClosetItem[] // UNIX: Productos que est치n en closets de usuarios
}

model Order {
  id              String      @id @default(cuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  total           Float
  status          String      @default("PENDING") // PENDING, PAID, SHIPPED, DELIVERED, CANCELLED
  paymentStatus   String      @default("pending") // pending, completed, failed
  paymentMethod   String      @default("bitcoin") // bitcoin (cryptocurrency)
  transactionId   String?     // Coinbase charge code
  items           OrderItem[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  shippingName    String
  shippingEmail   String
  shippingAddress String
  shippingCity    String
  shippingZip     String
  shippingPhone   String?
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
  size      String
  color     String
}

model Coupon {
  id          String   @id @default(cuid())
  code        String   @unique
  discount    Int // Porcentaje de descuento (0-100)
  minAmount   Float? // Monto m칤nimo para aplicar el cup칩n
  maxUses     Int? // M치ximo n칰mero de usos (null = ilimitado)
  currentUses Int      @default(0)
  validFrom   DateTime @default(now())
  validUntil  DateTime
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([code])
  @@index([active])
}

model Review {
  id               String   @id @default(cuid())
  productId        String
  product          Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating           Int // 1-5 stars
  title            String
  comment          String
  images           String? // JSON array of image URLs
  verifiedPurchase Boolean  @default(false)
  helpfulCount     Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([productId])
  @@index([userId])
  @@index([rating])
}

model GiftCard {
  id             String    @id @default(cuid())
  code           String    @unique
  initialAmount  Float
  currentAmount  Float
  recipientEmail String?
  recipientName  String?
  message        String?
  purchasedBy    String? // User email
  redeemedBy     String? // User email
  redeemedAt     DateTime?
  expiresAt      DateTime
  active         Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([code])
  @@index([active])
}

model ReturnRequest {
  id           String   @id @default(cuid())
  orderId      String
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  reason       String
  description  String
  images       String? // JSON array of image URLs
  status       String   @default("PENDING") // PENDING, APPROVED, REJECTED, COMPLETED
  refundAmount Float
  refundMethod String? // ORIGINAL_PAYMENT, STORE_CREDIT, etc.
  adminNotes   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

model Newsletter {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String?
  confirmed      Boolean   @default(false)
  confirmToken   String?   @unique
  source         String? // FOOTER, POPUP, CHECKOUT, etc.
  subscribedAt   DateTime  @default(now())
  confirmedAt    DateTime?
  unsubscribedAt DateTime?

  @@index([email])
  @@index([confirmed])
}

model BlogPost {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  excerpt     String
  content     String // HTML or Markdown content
  coverImage  String?
  author      String
  category    String
  tags        String // JSON array
  published   Boolean   @default(false)
  views       Int       @default(0)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([published])
  @@index([category])
}

model Banner {
  id          String    @id @default(cuid())
  title       String
  description String?
  image       String
  link        String?
  buttonText  String?
  position    String // HERO, TOP, SIDEBAR, etc.
  active      Boolean   @default(true)
  startDate   DateTime  @default(now())
  endDate     DateTime?
  clicks      Int       @default(0)
  priority    Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([active])
  @@index([position])
}

model Notification {
  id        String   @id @default(cuid())
  type      String // ORDER, LOW_STOCK, RETURN_REQUEST, etc.
  title     String
  message   String
  data      String? // JSON data
  read      Boolean  @default(false)
  actionUrl String?
  createdAt DateTime @default(now())

  @@index([read])
  @@index([type])
}

