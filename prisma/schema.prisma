model Outfit {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name        String
  description String?
  items       Json // JSON array de items del outfit
  occasion    String? // casual, formal, party, business, date, sport
  season      String? // spring, summer, autumn, winter, all-season

  // Metadata
  aiGenerated Boolean @default(false)
  favorite    Boolean @default(false)
  timesWorn   Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([occasion])
  @@index([favorite])
}

model ClosetItem {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Opcional: Si viene de un producto de la tienda
  productId String?
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  // Detalles del item
  name     String
  category String // shirt, pants, shoes, dress, jacket, accessories, etc.
  color    String
  colors   String? // JSON array si tiene m칰ltiples colores
  image    String?
  brand    String?
  size     String?
  price    Float?

  // Source: de d칩nde viene el item
  source String @default("user") // user, store, gift

  // Metadata
  favorite  Boolean   @default(false)
  timesWorn Int       @default(0)
  lastWorn  DateTime?
  notes     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([category])
  @@index([source])
}

model ColorimetryResult {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Resultados del an치lisis
  skinTone  String // warm, cool, neutral
  season    String? // spring, summer, autumn, winter (opcional, m치s detallado)
  undertone String? // golden, pink, olive (opcional)

  // Paletas de colores (Arrays nativos)
  bestColors  String[]
  goodColors  String[]
  avoidColors String[]

  // Recomendaciones
  recommendations Json? // Objeto JSON con consejos personalizados

  // Metadata
  aiGenerated Boolean @default(true)
  confidence  Float? // 0.0 - 1.0

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([skinTone])
}
